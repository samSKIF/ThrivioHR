modules = ["nodejs-20", "python-3.11", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Documentation Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "main"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "snapshot-ui"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "db-generate"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "db-migrate"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "db-seed-identity"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "test-identity"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "test-identity-final"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "db-diagnose-identity"

[[workflows.workflow]]
name = "Documentation Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m http.server 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "main"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "find . -type f -name \"*.md\" | head -10 && echo \"--- File structure ---\" && tree -I 'node_modules|.git' || ls -la"

[[workflows.workflow]]
name = "snapshot-ui"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "tsx scripts/snapshot-legacy-ui.ts"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "db-generate"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "drizzle-kit generate --config=drizzle.config.ts"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "db-migrate"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "drizzle-kit migrate --config=drizzle.config.ts"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "db-seed-identity"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "tsx services/identity/src/seeds/identity.seed.ts"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "test-identity"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "jest --config services/identity/jest.config.ts --coverage"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "test-identity-final"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "jest --config services/identity/jest.config.ts --runInBand --coverage"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "db-diagnose-identity"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "tsx scripts/diagnose-identity.ts"

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80
