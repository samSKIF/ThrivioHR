modules = ["nodejs-20", "python-3.11", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "test-identity"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "test-identity-final"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "db-diagnose-identity"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "bff-server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "web-dev"

[[workflows.workflow]]
name = "test-identity"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "jest --config services/identity/jest.config.ts --coverage"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "test-identity-final"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "jest --config services/identity/jest.config.ts --runInBand --coverage"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "db-diagnose-identity"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "tsx scripts/diagnose-identity.ts"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "bff-server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/bff && tsx src/main.ts"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "web-dev"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx nx serve web --port=3000"
waitForPort = 3000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 3000
externalPort = 3002

[[ports]]
localPort = 4000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 42225
externalPort = 3003

[[ports]]
localPort = 45637
externalPort = 3001
